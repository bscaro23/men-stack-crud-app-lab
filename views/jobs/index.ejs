<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Oscar's Job Board</title>
</head>
<body>
    <a href="/jobs/new">Add New Job</a>
    <a href="/">Home</a>
    <h1>All Jobs</h1>
    <ul>
        <% jobs.forEach(job => { %>
            <li><h2><a href="/jobs/<%= job._id %>"><%= job.title %></a></h2></li>
            Pay: $<%=job.payMin%> - $<%=job.payMax%> Location: <%=job.location%> <br> Application Deadline: <%=job.submissionDeadline%>
       <% }); %>
    </ul>
</body>
</html>