    <form action="/jobs/<%= job._id %>/edit" method="GET">
        <button type="submit">Edit <%= job.title%></button>
    </form>
    <form action="/jobs/<%= job._id %>/apply" method="GET">
        <button type="submit">Apply to be a <%= job.title%></button>
    </form>
