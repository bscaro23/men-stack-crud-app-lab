            <%} %></h1>
        <h3><%=job.jobSector%></h3>
        <h2><%=job.location%></h2>
    </div>
    <h2>Pay: $<%=job.payMin%> - $<%=job.payMax%></h2>
    <p><%=job.description%></p>
